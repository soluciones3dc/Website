<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>3DC | @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .carousel-caption {
            position: absolute;
            right: 0;
            bottom: 0;
            left: 12%;
            z-index: 10;
            padding-top: 20px;
            padding-bottom: 20px;
            color: #fff;
            text-align: left;
            top: 40%;
            width: 60%;
        }

        @@media screen and (min-width: 0px) {
            .slideshow {
                display: none;
            }
        }

        @@media screen and (min-width: 550px) {
            .slideshow {
                display: none;
            }
        }

        @@media screen and (min-width: 600px) {
            .slideshow {
                display: block;
            }

            .carousel-caption {
                top: 25%;
            }

                .carousel-caption h5 {
                    font-size: 1.9rem;
                }

                .carousel-caption p {
                    font-size: 1.0rem;
                }
        }

        @@media screen and (min-width: 1100px) {
            .carousel-caption {
                top: 40%;
            }

                .carousel-caption h5 {
                    font-size: 2.9rem;
                }

                .carousel-caption p {
                    font-size: 1.5rem;
                }
        }
    </style> <!-- Slideshow overwritten styles -->
</head>
<body>

    @Html.Partial("~/Views/Partials/_mainMenu.cshtml")
    @Html.Partial("~/Views/Partials/_slide.cshtml")
    <div class="container">
        @RenderBody()
        <hr />
        @Html.Partial("~/Views/Partials/_footer.cshtml")
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.2.0/anime.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.13/vue.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/Scripts/slide.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
